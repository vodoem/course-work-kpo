<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CosmicCollector.Avalonia.Views.Controls"
             x:Class="CosmicCollector.Avalonia.Views.GameView">
  <Grid RowDefinitions="Auto,*">
    <controls:HudView Margin="24,16,24,12" />
    <Border Grid.Row="1"
            Margin="24,0,24,24"
            Background="#0F0F0F"
            BorderBrush="#2E2E2E"
            BorderThickness="2"
            CornerRadius="12"
            ClipToBounds="True">
      <controls:GameFieldControl Snapshot="{Binding LatestSnapshot}"
                                 Width="{Binding FieldWidth}"
                                 Height="{Binding FieldHeight}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 ClipToBounds="True" />
    </Border>
    <Grid Grid.RowSpan="2"
          IsVisible="{Binding IsPaused}"
          Background="#80000000">
      <Border Width="360"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Background="#2A2A2A"
              CornerRadius="16"
              Padding="24">
        <Border.Styles>
          <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White" />
          </Style>
        </Border.Styles>
        <StackPanel Spacing="16"
                    HorizontalAlignment="Center">
          <TextBlock Text="Пауза"
                     FontSize="20"
                     FontWeight="Bold"
                     HorizontalAlignment="Center" />
          <Button Content="Продолжить"
                  Command="{Binding ResumeCommand}" />
          <Button Content="Главное меню"
                  Command="{Binding ExitToMenuCommand}" />
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl>
