<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.GameView">
  <Grid>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12"
                MaxWidth="600">
      <TextBlock Text="Игровой экран"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center" />
      <TextBlock Text="TODO: рендер игрового поля будет добавлен позже."
                 TextAlignment="Center"
                 TextWrapping="Wrap" />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
        <Button Content="Завершить (заглушка)" Command="{Binding FinishGameCommand}" />
        <Button Content="В меню" Command="{Binding BackToMenuCommand}" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
