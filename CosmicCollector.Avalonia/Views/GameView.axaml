<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:CosmicCollector.Avalonia.Views.Controls"
             x:Class="CosmicCollector.Avalonia.Views.GameView">
  <Grid>
    <Border Width="840"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      <StackPanel HorizontalAlignment="Center"
                  Spacing="12">
        <controls:HudView />
        <Border BorderBrush="White"
                BorderThickness="2"
                Width="{Binding FieldWidth}"
                Height="{Binding FieldHeight}">
          <controls:GameSceneControl Width="{Binding FieldWidth}"
                                     Height="{Binding FieldHeight}"
                                     Items="{Binding RenderItems}" />
        </Border>
        <Button Content="В меню" Command="{Binding BackToMenuCommand}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
