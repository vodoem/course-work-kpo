<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.GameView">
  <Grid>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12"
                MaxWidth="600">
      <TextBlock Text="Игровой экран"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center" />
      <TextBlock Text="Уровень: {Binding CurrentLevel}" TextAlignment="Center" />
      <TextBlock Text="Очки: {Binding Score}" TextAlignment="Center" />
      <TextBlock Text="Энергия: {Binding Energy}" TextAlignment="Center" />
      <TextBlock Text="Цель очков: {Binding RequiredScore}" TextAlignment="Center" />
      <TextBlock Text="{Binding TimerText}" TextAlignment="Center" />
      <TextBlock Text="{Binding BlueProgressText}" TextAlignment="Center" />
      <TextBlock Text="{Binding GreenProgressText}" TextAlignment="Center" />
      <TextBlock Text="{Binding RedProgressText}" TextAlignment="Center" />
      <TextBlock Text="Пауза: {Binding IsPaused}" TextAlignment="Center" />
      <TextBlock Text="Отсчёт: {Binding CountdownValue}" TextAlignment="Center" />
      <Button Content="В меню" Command="{Binding BackToMenuCommand}" Width="200" />
    </StackPanel>
  </Grid>
</UserControl>
