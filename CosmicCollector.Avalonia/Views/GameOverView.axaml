<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.GameOverView">
  <Grid>
    <Border Width="520"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      <StackPanel HorizontalAlignment="Center"
                  Spacing="12">
        <TextBlock Text="Экран завершения"
                   FontSize="24"
                   FontWeight="Bold" />
        <TextBlock Text="TODO: итоговый экран и сохранение рекорда будут добавлены позже."
                   TextWrapping="Wrap" />
        <Button Content="Сохранить" Command="{Binding SaveRecordCommand}" />
        <Button Content="Заново" Command="{Binding RestartCommand}" />
        <Button Content="В меню" Command="{Binding BackToMenuCommand}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
