<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.GameOverView">
  <Grid>
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="12"
                MaxWidth="600">
      <TextBlock Text="Экран завершения"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center" />
      <TextBlock Text="TODO: итоговый экран и сохранение рекорда будут добавлены позже."
                 TextAlignment="Center"
                 TextWrapping="Wrap" />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
        <Button Content="Сохранить" Command="{Binding SaveRecordCommand}" />
        <Button Content="Заново" Command="{Binding RestartCommand}" />
        <Button Content="В меню" Command="{Binding BackToMenuCommand}" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
