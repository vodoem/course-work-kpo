<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.MainMenuView">
  <UserControl.Styles>
    <Style Selector="Button.focus-target:focus">
      <Setter Property="Background" Value="#3A3A3A" />
      <Setter Property="BorderBrush" Value="#FFFFFF" />
      <Setter Property="BorderThickness" Value="2" />
    </Style>
  </UserControl.Styles>
  <Grid>
    <Border Width="480"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      <StackPanel HorizontalAlignment="Center"
                  Spacing="12">
        <TextBlock Text="COSMIC COLLECTOR"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   TextAlignment="Center" />
        <Button x:Name="StartGameButton"
                Content="_Играть"
                Classes="focus-target"
                Command="{Binding StartGameCommand}" />
        <Button x:Name="RulesButton"
                Content="_Правила"
                Classes="focus-target"
                Command="{Binding ShowRulesCommand}" />
        <Button x:Name="RecordsButton"
                Content="_Рекорды"
                Classes="focus-target"
                Command="{Binding ShowRecordsCommand}" />
        <Button x:Name="ExitButton"
                Content="_Выход"
                Classes="focus-target"
                Command="{Binding ExitCommand}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
