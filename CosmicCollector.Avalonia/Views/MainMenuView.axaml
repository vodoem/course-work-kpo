<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.MainMenuView">
  <Grid>
    <Border Width="480"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
      <StackPanel HorizontalAlignment="Center"
                  Spacing="12">
        <TextBlock Text="COSMIC COLLECTOR"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   TextAlignment="Center" />
        <Button Content="Играть" Command="{Binding StartGameCommand}" />
        <Button Content="Правила" Command="{Binding ShowRulesCommand}" />
        <Button Content="Рекорды" Command="{Binding ShowRecordsCommand}" />
        <Button Content="Выход" Command="{Binding ExitCommand}" />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
