<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.Controls.HudView">
  <Border Background="#1C1C1C"
          CornerRadius="12"
          Padding="16">
    <Border.Styles>
      <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="White" />
      </Style>
    </Border.Styles>
    <Grid ColumnDefinitions="*,*,*">
      <Border Background="#2A2A2A"
              CornerRadius="10"
              Padding="12"
              Margin="0,0,12,0">
        <StackPanel Spacing="8">
          <TextBlock Text="Нужное количество кристаллов"
                     FontWeight="Bold"
                     FontSize="12" />
          <StackPanel Orientation="Horizontal"
                      Spacing="8">
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_blue.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="RequiredBlueText" />
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_green.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="RequiredGreenText" />
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_red.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="RequiredRedText" />
          </StackPanel>
          <StackPanel Orientation="Horizontal"
                      Spacing="6">
            <TextBlock Text="Цель очков" />
            <TextBlock x:Name="RequiredScoreText" FontWeight="Bold" />
          </StackPanel>
        </StackPanel>
      </Border>
      <Border Background="#2A2A2A"
              CornerRadius="10"
              Padding="12"
              Margin="0,0,12,0"
              Grid.Column="1">
        <StackPanel Spacing="6"
                    HorizontalAlignment="Center">
          <TextBlock Text="Таймер"
                     FontWeight="Bold"
                     HorizontalAlignment="Center" />
          <TextBlock x:Name="TimerText"
                     FontSize="20"
                     FontWeight="Bold"
                     HorizontalAlignment="Center" />
        </StackPanel>
      </Border>
      <Border Background="#2A2A2A"
              CornerRadius="10"
              Padding="12"
              Grid.Column="2">
        <StackPanel Spacing="8">
          <StackPanel Orientation="Horizontal"
                      Spacing="6">
            <TextBlock Text="Уровень" />
            <TextBlock x:Name="CurrentLevelText" FontWeight="Bold" />
          </StackPanel>
          <TextBlock Text="Количество собранных кристаллов"
                     FontWeight="Bold"
                     FontSize="12" />
          <StackPanel Orientation="Horizontal"
                      Spacing="8">
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_blue.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="CollectedBlueText" />
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_green.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="CollectedGreenText" />
            <Image Source="avares://CosmicCollector.Avalonia/Assets/Sprites/crystal_red.png"
                   Width="20"
                   Height="20" />
            <TextBlock x:Name="CollectedRedText" />
          </StackPanel>
          <StackPanel Orientation="Horizontal"
                      Spacing="6">
            <TextBlock Text="Собранные очки" />
            <TextBlock x:Name="ScoreText" FontWeight="Bold" />
          </StackPanel>
          <StackPanel Orientation="Horizontal"
                      Spacing="6">
            <TextBlock Text="Количество энергии" />
            <TextBlock x:Name="EnergyText" FontWeight="Bold" />
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>
  </Border>
</UserControl>
