<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CosmicCollector.Avalonia.Views.Controls.HudView">
  <Grid RowDefinitions="Auto,Auto">
    <Grid ColumnDefinitions="Auto,*,Auto" Row="0">
      <TextBlock Text="{Binding HudTargetScoreText}"
                 Grid.Column="0"
                 TextTrimming="CharacterEllipsis" />
      <TextBlock Text="{Binding HudTimerValueText}"
                 Grid.Column="1"
                 HorizontalAlignment="Center"
                 TextTrimming="CharacterEllipsis" />
      <TextBlock Text="{Binding HudStatusText}"
                 Grid.Column="2"
                 TextTrimming="CharacterEllipsis" />
    </Grid>
    <Grid ColumnDefinitions="Auto,*" Row="1">
      <TextBlock Text="{Binding HudGoalsText}"
                 Grid.Column="0"
                 TextTrimming="CharacterEllipsis" />
      <TextBlock Text="{Binding HudProgressText}"
                 Grid.Column="1"
                 HorizontalAlignment="Right"
                 TextTrimming="CharacterEllipsis" />
    </Grid>
  </Grid>
</UserControl>
